{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["../../*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "../../server/**/*.ts",
    "../../db/**/*.ts",
    "../../services/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
